{% extends 'base.html.twig' %}

{% block title %}Doctor Profil{% endblock %}

{% block body %}


    <div class="row">
       <div class="col-6 offset-3">

           <div class="card bg-light" style= "margin-top: 15px; margin-bottom: 15px;">
               <div class="card-body">
                   <h1 class="text-center">Profil Docteur</h1>
                   <form>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label for="Nom" class="form-label">Nom</label>
                                    <input type="text" class="form-control" id="Nom" aria-describedby="Nom">
                                    
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label for="Prenom" class="form-label">Prenom</label>
                                    <input type="text" class="form-control" id="Prenom" aria-describedby="Prenom">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label for="inputEmail" class="form-label">Adresse email</label>
                                    <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label for="specialization">Spécialisation</label>
                                    <input type="text" class="form-control" id="specialization" placeholder="Votre specialisation">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label for="experience">Experience</label>
                                    <input type="number" class="form-control" id="experience" placeholder="Entrez vos années d'experiences">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-3">
                                    <label for="address">Adresse postale</label>
                                    <textarea class="form-control" id="address" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label for="phone">Numéro de téléphone</label>
                                    <input type="tel" class="form-control" id="phone" placeholder="Entrez votre numéro de téléphone">
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </form>
               </div>
           </div>
       </div>
   </div>



{% endblock %}
