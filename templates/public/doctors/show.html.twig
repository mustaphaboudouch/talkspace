{% extends 'base.html.twig' %}

{% block title %}
    TalkSpace - Thérapeute
{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold">
        Thérapeute
    </h1>

    <img src="{{ asset('uploads/profile/' ~ doctor.profilePicture) }}"
        width="100"
        height="100" />
    <h2>
        {{ doctor.firstname }} {{ doctor.lastname }}
    </h2>
    <p>
        {{ doctor.account.experience }}
    </p>
    <p>
        {{ doctor.account.description }}
    </p>

    {{ form_start(appointmentForm) }}
    {{ form_widget(appointmentForm) }}
    <button type="submit">Prenez rendez-vous</button>
    {{ form_end(appointmentForm) }}
{% endblock %}
