<section>
    <h3 class="text-xl font-bold">
        Jours de congés
    </h3>

    <table>
        <thead>
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for dayOff in daysOff %}
                <tr>
                    <td>
                        {{ dayOff.name }}
                    </td>
                    <td>
                        {{ dayOff.date|date('m/d/Y') }}
                    </td>
                    <td>
                        <form method="POST"
                            action="{{
                            path(
                                'app_doctor_settings_dayoff_delete',
                                {
                                    id: dayOff.id
                                }
                            )
                            }}"
                            onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden"
                                name="_token"
                                value="{{
                                csrf_token(
                                    'delete' ~ dayOff.id
                                )
                                }}" />
                            <button>Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        Pas de jours de congés
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ form_start(dayOffForm) }}
    {{ form_widget(dayOffForm) }}
    <button type="submit">Ajouter</button>
    {{ form_end(dayOffForm) }}
</section>
