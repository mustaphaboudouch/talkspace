{% extends 'base.html.twig' %}

{% block title %}
    TalkSpace - Paramètres
{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold">
        Paramètres
    </h1>

    <h3 class="text-xl font-bold">
        Informations
    </h3>

    {{ form_start(accountForm) }}
    {{ form_widget(accountForm) }}
    <button type="submit">Enregistrer</button>
    {{ form_end(accountForm) }}

    <h3 class="text-xl font-bold">
        Calendrier
    </h3>

    {% for schedule in schedules %}
        <div>
            <p>
                {{ schedule.day }}
            </p>
            <ul>
                {% for period in schedule.getPeriods() %}
                    <li>
                        <div>
                            {{ period.startTime }} - {{ period.endTime }}
                        </div>
                        <form method="POST"
                            action="{{
                            path(
                                'app_doctor_settings_period_delete',
                                {
                                    id: period.id
                                }
                            )
                            }}"
                            onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden"
                                name="_token"
                                value="{{
                                csrf_token(
                                    'delete' ~ period.id
                                )
                                }}" />
                            <button>Supprimer</button>
                        </form>
                    </li>
                {% else %}
                    <li>Pas de periods</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}

    {{ form_start(periodForm) }}
    {{ form_widget(periodForm) }}
    <button type="submit">Ajouter</button>
    {{ form_end(periodForm) }}

    <h3 class="text-xl font-bold">
        Jours de congés
    </h3>

    <table>
        <thead>
            <tr>
                <th>
                    Nom
                </th>
                <th>
                    Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for dayOff in daysOff %}
                <tr>
                    <td>
                        {{ dayOff.name }}
                    </td>
                    <td>
                        {{ dayOff.date|date('m/d/Y') }}
                    </td>
                    <td>
                        <form method="POST"
                            action="{{
                            path(
                                'app_doctor_settings_dayoff_delete',
                                {
                                    id: dayOff.id
                                }
                            )
                            }}"
                            onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden"
                                name="_token"
                                value="{{
                                csrf_token(
                                    'delete' ~ dayOff.id
                                )
                                }}" />
                            <button>Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">
                        Pas de jours de congés
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ form_start(dayOffForm) }}
    {{ form_widget(dayOffForm) }}
    <button type="submit">Ajouter</button>
    {{ form_end(dayOffForm) }}
{% endblock %}
