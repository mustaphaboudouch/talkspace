            <li class="nav-item">
                <a class="nav-link text-white d-flex gap-2" href="#">
                    <i class="bi bi-envelope-open-fill"></i>
                </a>
            </li>
        </ul>
    </div>
    <div class="container border-top pt-4 pb-5">
        <p class="mb-0">Copyright &copy; 2023 TalkSpace Platform</p>
    </div>
</footer>

