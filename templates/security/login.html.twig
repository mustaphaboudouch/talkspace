{% extends 'layouts/auth.html.twig' %}

{% block title %}TalkSpace - S'identifier{% endblock %}

{% block form %}
    <h1>S'identifier</h1>

    <form method="post">
        {% if error %}
            <div class="alert alert-danger d-flex gap-3" role="alert">
                <i class="bi bi-exclamation-circle-fill"></i>
                <p class="mb-0">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="mt-3">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="mt-3">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <div class="d-flex align-items-center justify-content-between mt-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="_remember_me" id="rememeber-me">
                <label class="form-check-label" for="rememeber-me">
                    Remember me
                </label>
            </div>
            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
        </div>

        <div class="d-flex align-items-center mt-4">
            <button type="submit" class="btn btn-primary">S'identifier</button>
            <span class="ms-3">ou</span>
            <a class="btn btn-link" href="{{ path('app_register') }}">Inscrivez-vous</a>
        </div>
    </form>
{% endblock %}