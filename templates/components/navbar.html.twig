<header style="border:1px solid #000000;">
    <a href="{{ path('app_home') }}">TalkSpace</a>
    <nav>
        {% if app.user %}
            <a href="{{ path('app_dashboard') }}">Dashboard</a>
            <a href="{{ path('app_profile') }}">Profil</a>
            {% if is_granted('ROLE_DOCTOR') %}
                <a href="{{ path('app_doctor_settings') }}">Paramètres</a>
            {% endif %}
            <a href="{{ path('app_logout') }}">Déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}">S'identifier</a>
            <a href="{{ path('app_register') }}">S'inscrire</a>
        {% endif %}
    </nav>
</header>
