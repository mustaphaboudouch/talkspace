{% extends 'layouts/auth.html.twig' %}

{% block title %}TalkSpace - Réinitialisation votre mot de passe{% endblock %}

{% block form %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger d-flex gap-3" role="alert">
            <i class="bi bi-exclamation-circle-fill"></i>
            <p class="mb-0">{{ flash_error }}</p>
        </div>
    {% endfor %}

    <h1>Réinitialiser votre mot de passe</h1>
    <p class="mt-3">Entrez votre adresse e-mail, et nous vous enverrons un lien qui vous permettra de réinitialiser votre mot de passe.</p>

    {{ form_start(requestForm) }}
        <div class="mt-3">
            {{ form_row(requestForm.email, { label: 'Adresse e-mail' }) }}
        </div>

        <div class="mt-4">
            <button class="btn btn-primary">Envoyer le lien de réinitialisation</button>
            <p class="mb-0 mt-2 small">Besoin d'aide ? Consultez notre FAQ et notre politique de confidentialité</p>
        </div>
    {{ form_end(requestForm) }}
{% endblock %}
