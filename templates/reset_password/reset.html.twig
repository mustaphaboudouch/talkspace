{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="col-6 offset-3">
            <div class="card bg-light" style= "margin-top: 15px; margin-bottom: 15px;">
                <div class="card-body">
                    <h1 class="text-center">Réinitialiser le mot de passe</h1><br>
                    Insérer un nouveau mot de passe.<br><br>
                    <form>
                        <div class="form-group">
                            <div class="mb-3">
                                <label for="password">Nouveau mot de passe</label>
                                <input type="password" class="form-control" id="password">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="mb-3">
                                <label for="confirmPassword">Confirmer le nouveau mot de passe</label>
                                <input type="password" class="form-control" id="confirmPassword">
                            </div>    
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Réinitialiser le mot de passe</button>
                    </form>
                </div>
            </div>
        </div>            
    </div>
{% endblock %}
