{% extends 'base.html.twig' %}

{% block title %}
    TalkSpace - Centre d'aide
{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold">
        Centre d'aide
    </h1>

    <table>
        <tbody>
            <tr>
                <th>
                    Id
                </th>
                <td>
                    {{ contact.id }}
                </td>
            </tr>
            <tr>
                <th>
                    Pr√©nom
                </th>
                <td>
                    {{ contact.firstname }}
                </td>
            </tr>
            <tr>
                <th>
                    Nom
                </th>
                <td>
                    {{ contact.lastname }}
                </td>
            </tr>
            <tr>
                <th>
                    Adresse e-mail
                </th>
                <td>
                    {{ contact.email }}
                </td>
            </tr>
            <tr>
                <th>
                    Message
                </th>
                <td>
                    {{ contact.message }}
                </td>
            </tr>
        </tbody>
    </table>

    <form method="POST"
        action="{{
        path(
            'app_admin_support_delete',
            {
                id: contact.id
            }
        )
        }}"
        onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden"
            name="_token"
            value="{{ csrf_token('delete' ~ contact.id) }}" />
        <button>Supprimer</button>
    </form>
{% endblock %}
