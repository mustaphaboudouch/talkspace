{% extends 'layouts/app.html.twig' %}

{% block title %}
    TalkSpace - Centre d'aide
{% endblock %}

{% block body %}
    <h1 class="mb-8 text-3xl font-bold">
        Centre d'aide
    </h1>

    <table class="w-full rounded-md border border-gray-300 bg-white">
        <tbody>
            <tr class="border-t border-gray-300">
                <th class="p-4 text-left text-sm font-normal uppercase text-gray-500">
                    Expéditeur
                </th>
                <td>
                    {{ contact.firstname }} {{ contact.lastname }}
                </td>
            </tr>
            <tr class="border-t border-gray-300">
                <th class="p-4 text-left text-sm font-normal uppercase text-gray-500">
                    Adresse e-mail
                </th>
                <td>
                    {{ contact.email }}
                </td>
            </tr>
            <tr class="border-t border-gray-300">
                <th class="p-4 text-left text-sm font-normal uppercase text-gray-500">
                    Message
                </th>
                <td>
                    {{ contact.message }}
                </td>
            </tr>
        </tbody>
    </table>

    {{ form_start(form) }}
    <div class="mt-8">
        {{ form_row(form.subject) }}
    </div>
    <div class="mt-2">
        {{ form_row(form.response) }}
    </div>
    <div class="mt-4 flex items-center gap-2">
        <button type="submit"
            class="rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
            Répondre
        </button>
    </div>
    {{ form_end(form) }}

    <form method="POST"
        action="{{
        path(
            'app_admin_support_delete',
            {
                id: contact.id
            }
        )
        }}"
        onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden"
            name="_token"
            value="{{ csrf_token('delete' ~ contact.id) }}" />
        <button class="rounded-md border border-transparent bg-red-600 py-2 px-4 text-sm font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
            Supprimer ce message
        </button>
    </form>
{% endblock %}
