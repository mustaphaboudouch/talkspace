{% extends 'layouts/app.html.twig' %}

{% block title %}
    TalkSpace - Dashboard
{% endblock %}

{% block body %}
    {% if app.user and app.user.isVerified != true %}
        <div class="bg-red-200 p-4" role="alert">
            Votre compte n'est pas activé
        </div>
    {% endif %}

    <h1 class="text-2xl font-bold">
        Dashboard
    </h1>

    {% if app.user %}
        <p>
            Bonjour {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnecter</a>
        </p>
    {% endif %}
{% endblock %}
