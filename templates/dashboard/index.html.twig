{% extends 'layouts/app.html.twig' %}

{% block title %}
    TalkSpace - Dashboard
{% endblock %}

{% block body %}
    <h1 class="mb-8 text-3xl font-bold">
        Dashboard
    </h1>

    <div class="flex flex-col items-center gap-4 md:flex-row">
        {% if is_granted('ROLE_ADMIN') %}
            <div class="flex w-full flex-1 flex-col gap-1 rounded-md border border-gray-300 bg-white p-4 text-center">
                <span class="text-4xl font-bold">{{ doctorsCount }}</span>
                <span class="text-xs font-medium uppercase text-gray-500">
                    Th√©rapeutes
                </span>
            </div>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DOCTOR') %}
            <div class="flex w-full flex-1 flex-col gap-1 rounded-md border border-gray-300 bg-white p-4 text-center">
                <span class="text-4xl font-bold">{{ patientsCount }}</span>
                <span class="text-xs font-medium uppercase text-gray-500">
                    Patients
                </span>
            </div>
            <div class="flex w-full flex-1 flex-col gap-1 rounded-md border border-gray-300 bg-white p-4 text-center">
                <span class="text-4xl font-bold">{{ servicesCount }}</span>
                <span class="text-xs font-medium uppercase text-gray-500">
                    Services
                </span>
            </div>
        {% endif %}
        <div class="flex w-full flex-1 flex-col gap-1 rounded-md border border-gray-300 bg-white p-4 text-center">
            <span class="text-4xl font-bold">{{ appointmentsCount }}</span>
            <span class="text-xs font-medium uppercase text-gray-500">
                Rendez-vous
            </span>
        </div>
    </div>
{% endblock %}
